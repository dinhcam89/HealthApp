<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="._fragment.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/hello_blank_fragment" />-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/ellipse_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <TextView
            android:id="@+id/textView_DoctorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:text="Hoàng Đình Cẩm"
            android:textAlignment="center"
            android:textSize="28dp"
            android:textStyle="bold"
            android:textColor="@color/gs_ts_bs_nguy_n_tr_ng_t_m_color"
            app:layout_constraintTop_toBottomOf="@+id/imageView7">
        </TextView>

        <Button
            android:id="@+id/btn_changeSetting"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_book"
            android:text="Chỉnh sửa"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_DoctorName">

        </Button>

        <TextView
            android:id="@+id/textView_BHYT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số BHYT"
            android:textColor="@color/gs_ts_bs_nguy_n_tr_ng_t_m_color"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_changeSetting"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp">
        </TextView>

        <TextView
            android:id="@+id/textView_soBHYT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:text="SV5678267894"
            android:textColor="@color/gs_ts_bs_nguy_n_tr_ng_t_m_color"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView_BHYT"
            app:layout_constraintTop_toBottomOf="@+id/btn_changeSetting"
>
        </TextView>

        <TextView
            android:id="@+id/textView_namsinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Năm sinh"
            android:textColor="@color/gs_ts_bs_nguy_n_tr_ng_t_m_color"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_BHYT"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp">
        </TextView>

        <TextView
            android:id="@+id/textView_sonamsinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:text="2003"
            android:textColor="@color/gs_ts_bs_nguy_n_tr_ng_t_m_color"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView_namsinh"
            app:layout_constraintTop_toBottomOf="@+id/textView_soBHYT">
        </TextView>

        <TextView
            android:id="@+id/textView_gioitinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới tính"
            android:textColor="@color/gs_ts_bs_nguy_n_tr_ng_t_m_color"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_namsinh"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp">
        </TextView>

        <TextView
            android:id="@+id/textView_gioitinh1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:text="Nam"
            android:textColor="@color/gs_ts_bs_nguy_n_tr_ng_t_m_color"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView_gioitinh"
            app:layout_constraintTop_toBottomOf="@+id/textView_sonamsinh">
        </TextView>

        <TextView
            android:id="@+id/textView_sdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:textColor="@color/gs_ts_bs_nguy_n_tr_ng_t_m_color"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_gioitinh"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp">
        </TextView>

        <TextView
            android:id="@+id/textView_sdt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="20dp"
            android:text="0783827882"
            android:textColor="@color/gs_ts_bs_nguy_n_tr_ng_t_m_color"
            android:textSize="22dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView_sdt"
            app:layout_constraintTop_toBottomOf="@+id/textView_gioitinh1">
        </TextView>

        <Button
            android:id="@+id/btn_ch"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_logout"
            android:text="Đăng xuất"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_sdt1">
        </Button>

    </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</FrameLayout>