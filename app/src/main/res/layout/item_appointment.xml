<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/frame_doctor"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/item_doctor_bg"
        >
    </View>

    <ImageView
        android:id="@+id/image_Doctor"
        android:layout_width="110dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/frame_doctor"
        android:layout_alignTop="@+id/frame_doctor"
        android:layout_alignBottom="@+id/frame_doctor"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/ellipse_1">
    </ImageView>

    <TextView
        android:id="@+id/textView_DoctorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/frame_doctor"
        android:layout_alignEnd="@+id/frame_doctor"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/image_Doctor"
        android:text="Tên Bác sĩ"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15dp"
        android:textStyle="bold"
        >
    </TextView>

    <TextView
        android:id="@+id/textView_DoctorSpeciality"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/frame_doctor"
        android:layout_alignEnd="@+id/frame_doctor"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="35dp"
        android:layout_toEndOf="@+id/image_Doctor"
        android:text="Chuyên khoa"
        android:textColor="@color/teal_700"
        android:textSize="14dp"
        android:textStyle="bold"
        >
    </TextView>

    <TextView
        android:id="@+id/textView_PaymentMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/frame_doctor"
        android:layout_alignEnd="@+id/frame_doctor"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="55dp"
        android:layout_toEndOf="@+id/image_Doctor"
        android:text="Hình thức thanh toán"
        android:textColor="#F44336"
        android:textStyle="bold">
    </TextView>
    <TextView
        android:id="@+id/textView_AppointmentDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/frame_doctor"
        android:layout_alignEnd="@+id/frame_doctor"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="75dp"
        android:layout_toEndOf="@+id/image_Doctor"
        android:text="Ngày khám"
        android:textColor="@color/teal_700"
        android:textSize="14dp"
        android:textStyle="bold"
        >
    </TextView>

</RelativeLayout>