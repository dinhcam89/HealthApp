<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:tools="http://schemas.android.com/tools"
    android:shape="rectangle"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="ExtraText">
    <solid android:color="#00000000" /> <!-- Màu nền trong suốt -->
    <stroke
        android:color="#009688"
        android:width="1dp"
        android:top="0dp"
        android:left="0dp"
        android:right="0dp"
        android:bottom="1dp"/> <!-- Độ dày của đường viền -->
    <corners android:radius="8dp"></corners>
    <padding
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        android:left="0dp" />

</shape>